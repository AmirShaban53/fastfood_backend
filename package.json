{
  "name": "fastfood_backend",
  "version": "1.0.0",
  "description": "backend of fast food web app",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "set NODE_ENV=test &&  mocha --timeout 10000 ",
    "ci:test": "set NODE_ENV=test && mocha --ci --detectOpenHandles --forceExit",
    "coverage": "nyc report",
    "just": "node ./just.js",
    "start": "nodemon -e yaml index.js"
  },
  "nyc": {
    "all": "true",
    "include": ["routes/*.js"],
    "exclude": [],
    "report": true,
    "reporter": ["text","html", "lcov"]
  },
  "author": "AMIR BUDDA SHABAN",
  "license": "ISC",
  "dependencies": {
    "swagger-ui-express": "^4.1.6",
    "jsonwebtoken": "^8.5.1",
    "sequelize": "^6.6.5",
    "express": "^4.17.1",
    "winston": "^3.3.3",
    "bcrypt": "^5.0.1",
    "yamljs": "^0.3.0",
    "cors": "^2.8.5",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "mocha-lcov-reporter": "^1.3.0",
    "coveralls": "^3.1.1",
    "chai-http": "^4.3.0",
    "nodemon": "^2.0.12",
    "dotenv": "^10.0.0",
    "mocha": "^9.1.0",
    "chai": "^4.3.4",
    "nyc": "^15.1.0"
  }
